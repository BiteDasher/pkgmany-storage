debname=wifiman-indicator
_subname=vindicator
debver=1.4.3
debrel=1
debdesc="LibIndicator support for WifiMan. Written in Vala"
debarch="amd64"
maintainer="Artemii Sudakov <finziyr@yandex.ru>"
year=2020
url='https://github.com/BiteDasher/wifiman-indicator'
license="MIT"
debdeps="wifiman, zenity, policykit-1, xdg-user-dirs"
makedepends=('valac' 'libappindicator-dev' 'binutils')
debrec="isc-dhcp-client"
sources=("wget:${debname}-${debver}.tar.gz:https://github.com/BiteDasher/wifiman-indicator/archive/${debver}.tar.gz"	
	"git:vindicator:https://github.com/platofff/vindicator.git"
)
sha256sums=("f47d9b6b3783ac7e40e3bea531fe78cae0078f75922a826b25fc4cf98bf40f49"
            "SKIP")
unpack() {
tar -xf "$srcdir/${debname}-${debver}.tar.gz" -C $srcdir/
mv $srcdir/$_subname/Makefile $srcdir/$_subname/vindicator.vala $srcdir/$pkgname-$pkgver/$_subname
}
package() {
cd $srcdir/$pkgname-$pkgver
make all
make PREFIX="$pkgdir/usr" PK_DEST="$pkgdir/usr/share/polkit-1/actions" PK_EXEC_DEST="\/usr\/bin" XDG_DEST="$pkgdir/etc/xdg/autostart" install
}
